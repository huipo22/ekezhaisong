/* pages/orderList/orderList.wxss */

.container {
  height: 100%;
}

.order_title {
  width: 100%;
  display: flex;
  height: 100rpx;
  background: #fff;
}

.order_title1 {
  flex: 1;
  /* width: 25%; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.order_title1>text {
  display: flex;
  height: 100%;
  align-items: center;
}

.order_detail {
  width: 100%;
  height: 100%;
  display: flex;
}

.add-tabing {
  border-bottom: 1rpx solid #00a046;
}

.orderBox {
  width: 100%;
}

.order {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx;
}

.order-head, .order-foot {
  height: 80rpx;
  display: flex;
  align-items: center;
}

.good {
  border-top: 1rpx solid #F1F1F3;
  border-bottom: 1rpx solid #F1F1F3;
}

.good_img {
  display: flex;
  align-items: center;
}

.order-num {
  flex: 1
}

.btnop {
  width: 100rpx;
  border: 1rpx solid;
  text-align: center;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.btnop1 {
  width: 100rpx;
  border: 1rpx solid;
  text-align: center;
  border-radius: 8rpx;
  margin: 0 10rpx;
  background: #FE8045;
  color: #fff;
}

.r_box {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
}