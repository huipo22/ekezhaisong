/* pages/person/person.wxss */

.container {
  height: auto;
}

.common {
  margin-top: 15rpx;
  background: #fff;
}

.p-header {
  width: 100%;
  height: auto;
  position: relative;
}

.bgHeader {
  background: #00a046;
  height: 400rpx;
  display: flex;
  align-items: center;
}

.avater {
  display: flex;
  margin-left: 5%;
  color: #fff;
  width: 100%;
}

.avaterImg1 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.avaterImg {
  width: 50rpx;
  height: 50rpx;
  /* border-radius: 50%; */
}

.avaterItem {
  flex: 2;
  display: flex;
  align-items: center;
  font-weight: bold;
  padding-left: 20rpx;
}

.bottomList {
  width: 100%;
  height: 26rpx;
}

.bottom_line {
  border-bottom: 1px solid #ccc;
}

.bag {
  display: flex;
  height: 120rpx;
  background: #fff;
}

.bag_cato {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.slot_icon {
  /* display: flex; */
  margin-right: 6px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.slot_icon>image {
  width: 50rpx;
  height: 50rpx;
}

.order {
  width: 100%;
  background: #fff;
}

.order-title {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 3%;
}

.order_list {
  display: flex;
  border-top: 1px solid #ccc;
  height: 120rpx;
}

.order_list_cato {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #515151;
  font-size: 30rpx;
}

.qianbao {
  width: 60rpx;
  height: 60rpx;
}

.jifen {
  width: 30rpx;
  height: 30rpx;
}

.jifen_box {
  display: flex;
}

.address {
  display: flex;
  align-items: center;
  flex: 1;
  background: red;
  border-radius: 40rpx 0 0 40rpx;
  padding-left: 20rpx;
}