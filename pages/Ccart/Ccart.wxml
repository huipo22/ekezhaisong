<!-- pages/cart/cart.wxml -->
<view class="container">
    <scroll-view class='scroll' scroll-y="true">
        <view class='separate'></view>
        <view wx:for="{{carts}}" wx:key="">
            <view class='cart_container'>
                <view>
                    <image src="../../dist/icon/shanchu.png" class="deleteBox" catch:tap="singleDelete" data-index="{{index}}" />
                </view>
                <view class='{{item.isSelect?"item-select-yes":"item-select-no"}}' catch:tap="switchSelect" data-index="{{index}}" data-id="{{index}}">
                    <text></text>
                </view>
                <image class='item-image' src='{{resourse+item.goods_img}}' catch:tap="goodSelect" data-goodid="{{item.goods_id}}" thumb-class="{{items.goods_num==0?'zhezhao':''}}"></image>
                <view class='column'>
                    <text class='title' catch:tap="goodSelect" data-goodid="{{item.goods_id}}">
                        {{item.goods_name}}
                    </text>
                    <text class='desc' catch:tap="goodSelect" data-goodid="{{item.goods_id}}">
                        限购{{item.limit_num}}{{item.goods_spec}}
                    </text>
                    <view class='row margintop' catch:tap="goodSelect" data-goodid="{{item.goods_id}}">
                        <text class='sku-price1'>￥</text>
                        <text class='sku-price1'>{{item.present_price}}/{{item.goods_spec}}</text>
                    </view>
                    <view class='row' catch:tap="goodSelect" data-goodid="{{item.goods_id}}">
                        <text class='sku-price'>￥</text>
                        <text class='sku-price'>{{item.present_price}}/{{item.goods_spec}}</text>
                    </view>
                    
                    
                </view>
                <!-- <view class="tips" wx:if="{{item.num==item.limit_num}}">限购{{limit_num}}件</view> -->
                <view class='sku'>
                        <text class='sub' catch:tap='quantityChange' id='dec' data-index="{{index}}">
                            -
                        </text>
                        <text class='number'>{{item.num}}</text>
                        <text class='add' catch:tap='quantityChange' id='inc' data-index="{{index}}">
                            +
                        </text>
                    </view>
            </view>
            <view class='separate'></view>
        </view>
    </scroll-view>
    <view class='bottom_total'>
        <view class='bottom_line'></view>
        <view class='row'>
            <view bindtap='selectAll' class='{{isAllSelect?"item-allselect-yes":"item-allselect-no"}}'>
                <text></text>
            </view>
            <text class='small_text'>全选</text>
            <text>合计：￥</text>
            <text class='price'>{{totalMoney}}</text>
            <button class='button-red' catch:tap="endTap" form-type='submit'>
                结算{{selectNum==0?'':('('+selectNum+')')}}
            </button>
        </view>
    </view>
</view>