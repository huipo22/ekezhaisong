      <view class="se_address line ml">
        <view class="se_label">
          <text>下单备注</text>
        </view>
        <view>
          <input placeholder="请输入留言" value="{{remark}}" type="text"></input>
        </view>
      </view>
      <view class="se_address line ml">
        <view class="se_label">
          <text>配送地址</text>
        </view>
