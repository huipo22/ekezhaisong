        </view>
      </view>
      <view class="se_address line2 ml">
        <view class="se_label">
          <text>配送须知</text>
        </view>
        <view wx:if="{{settleData.express_price==0}}">
          <text>满{{settleData.base_price}}元，免配送费</text>
        </view>
        <view wx:else>
          <text>满{{settleData.base_price}}元，免{{settleData.express_price}}元配送费</text>
        </view>
      </view>
    </view>
    <view class="bottom">
      <view class="tag1">
        <text>总计：{{settleData.price}}</text>
      </view>
      <view class="tag2" bindtap="submitTap">
        <text>提交</text>
      </view>
    </view>
