<view class="container">
  <scroll-view scroll-y="true" style="height: 100%;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view class="se_addressBox mb" bindtap="address">
      <view class="se_address" wx:if="{{settleData.address_info==null&& parmsData==null}}">
        <text style="color:red">请选择收货地址</text>
      </view>
      <view wx:elif="{{parmsData!==null}}" class="addressLeft">
        <view class="addressInfo">
          <view class="addressCon">
            <text>收货人:</text>
            <text class="name">{{parmsData.name}}</text>
            <text>{{parmsData.mobile}}</text>
          </view>
          <view class="address">
            <text>收货地址:</text>
            <text>{{parmsData.address}}</text>
          </view>
        </view>
      </view>
      <view wx:else class="addressLeft">
        <view class="addressInfo">
          <view class="addressCon">
            <text>收货人:</text>
            <text class="name">{{settleData.address_info.name}}</text>
            <text>{{settleData.address_info.mobile}}</text>
          </view>
          <view class="address">
            <text>收货地址:</text>
            <text>{{settleData.address_info.address}}</text>
          </view>
        </view>
      </view>
      <view class="moreIcon"></view>
    </view>
    <view class="payRow">
      <view class="single">
        <text>支付方式</text>
      </view>
      <view>
        <text>在线支付</text>
      </view>
    </view>
