    <view class="se_address_con">
      <view class="se_address_con_title line">
        <text>平台自营</text>
      </view>
      <view class="goodList" wx:for="{{settleData.goods_info}}" wx:for-item="good" wx:key="*this">
        <view class="good">
          <view class="good_img">
            <image src="{{resource+good.goods_img}}" mode="aspect" style="height: 65px;width: 65px;" role="img"></image>
          </view>
          <view class="good_con">
            <text>{{good.goods_name}}</text>
            <text class="guige">规格：{{good.goods_spec}}</text>
            <text class="price">x{{good.goods_num}}</text>
          </view>
          <view class="good_num">{{"￥"+good.goods_price}}</view>
        </view>
      </view>
      <view class="se_address line">
        <view class="se_address1">
          <text>配送方式</text>
        </view>
        <view class="radioBox">
          <view>
            <radio checked="{{true}}">快递配送</radio>
          </view>
          <!-- <view>
          <radio>到店自提</radio>
        </view> -->
        </view>
      </view>
