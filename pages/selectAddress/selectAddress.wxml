<!-- pages/selectAddress/selectAddress.wxml -->
<view class="container">
    <view class="addressBox">
        <view class="addressInfo" wx:for="{{addressList}}" wx:for-item="address" wx:key="*this" bindtap="selectedAddress" data-address="{{address}}">
            <view>
                <radio class="a_radio" checked="{{address.default}}" bindtap="radioTap" data-id="{{address.id}}"></radio>
            </view>
            <view style="width:100%">
                <van-row custom-class="row addressB" catch:tap="address">
                    <van-col span="12" custom-class="col sty">
                        <view>收货人:{{address.name}}</view>
                        <view>收货地址:{{address.address}}</view>
                    </van-col>
                    <van-col span="12" custom-class="col">{{address.mobile}}</van-col>
                </van-row>
            </view>
        </view>
    </view>
    <view class="address_btn" bindtap="newAddress">
        <text>添加新地址</text>
    </view>
    <!-- <view class="btnBox">
        <button bindtap="getAddress" type="primary" size="mini">一键获取地址</button>
    </view> -->
</view>